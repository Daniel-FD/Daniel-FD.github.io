<section class="relative min-h-screen flex flex-col justify-center items-center text-center px-6 overflow-hidden" id="hero">
  <!-- Particle background -->
  <div
    class="absolute inset-0 animate-drift opacity-60 pointer-events-none"
    style="background:
      radial-gradient(1.5px 1.5px at 10% 20%, rgba(99,102,241,0.4), transparent),
      radial-gradient(1px 1px at 30% 60%, rgba(99,102,241,0.3), transparent),
      radial-gradient(1.5px 1.5px at 50% 40%, rgba(99,102,241,0.25), transparent),
      radial-gradient(1px 1px at 70% 80%, rgba(99,102,241,0.35), transparent),
      radial-gradient(2px 2px at 90% 30%, rgba(99,102,241,0.4), transparent),
      radial-gradient(2px 2px at 20% 70%, rgba(34,197,94,0.15), transparent),
      radial-gradient(1.5px 1.5px at 80% 50%, rgba(245,158,11,0.12), transparent),
      radial-gradient(1px 1px at 15% 45%, rgba(99,102,241,0.3), transparent),
      radial-gradient(1px 1px at 60% 25%, rgba(99,102,241,0.2), transparent),
      radial-gradient(1.5px 1.5px at 85% 70%, rgba(99,102,241,0.3), transparent),
      radial-gradient(1px 1px at 40% 90%, rgba(99,102,241,0.2), transparent),
      radial-gradient(1.5px 1.5px at 55% 55%, rgba(34,197,94,0.12), transparent);"
  ></div>

  <!-- Glow -->
  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[500px] h-[500px] rounded-full pointer-events-none"
    style="background: radial-gradient(circle, rgba(99,102,241,0.08) 0%, transparent 70%);"
  ></div>

  <!-- Content -->
  <div class="relative z-10 animate-fade-in-up">
    <p class="font-mono text-sm text-accent tracking-wide mb-4">// hello, world</p>

    <h1 class="text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold tracking-tight mb-5 leading-[1.1]">
      I'm <span class="gradient-text">Daniel Fiuza</span>
    </h1>

    <p class="text-lg text-text-muted max-w-lg mx-auto mb-8 leading-relaxed">
      I build AI products that solve real problems — from blockchain
      compliance systems monitoring $30B+ to patented medical diagnostics.
    </p>

    <div class="flex gap-3 justify-center flex-wrap">
      <a
        href="#work"
        class="font-mono text-sm px-6 py-3 rounded-xl bg-accent border border-accent text-white hover:bg-accent/90 transition-all hover:-translate-y-0.5"
      >
        View My Work
      </a>
      <a
        href="#contact"
        class="font-mono text-sm px-6 py-3 rounded-xl border border-border bg-bg-card text-text hover:border-border-hover hover:bg-bg-card-hover transition-all hover:-translate-y-0.5"
      >
        Get In Touch
      </a>
    </div>
  </div>

  <!-- Scroll indicator -->
  <p class="absolute bottom-10 left-1/2 -translate-x-1/2 font-mono text-[11px] text-text-dim tracking-wider animate-bounce-subtle">
    ↓ scroll to explore
  </p>
</section>
