---
const categories = [
  {
    name: 'ML & AI',
    items: ['PyTorch', 'TensorFlow', 'scikit-learn', 'HuggingFace', 'LangChain'],
  },
  {
    name: 'Data',
    items: ['Python (Pandas, NumPy)', 'SQL / PostgreSQL', 'Spark', 'D3.js / Observable', 'Jupyter'],
  },
  {
    name: 'Infrastructure',
    items: ['AWS (SageMaker, Lambda)', 'Docker', 'Kafka', 'GitHub Actions', 'Terraform'],
  },
  {
    name: 'Blockchain',
    items: ['Web3.py / Ethers', 'Graph Neural Networks', 'Cross-chain indexers', 'DeFi protocols'],
  },
  {
    name: 'Product & Design',
    items: ['Figma', 'React / Next.js', 'Tailwind CSS', 'User Research'],
  },
  {
    name: 'This Site',
    items: ['Astro', 'Tailwind CSS', 'GSAP', 'GitHub Pages'],
  },
];
---

<section class="max-w-6xl mx-auto px-6 py-24" id="stack">
  <p class="font-mono text-[11px] uppercase tracking-[2px] text-accent mb-2 inline-block px-3 py-1.5 rounded-md border border-accent/20 bg-accent/10">
    Tools
  </p>
  <h2 class="text-3xl font-bold tracking-tight mb-2">/stack</h2>
  <p class="text-base text-text-muted mb-12 max-w-xl">What I use and why.</p>

  <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 gap-4 stagger-children">
    {categories.map(cat => (
      <div class="bg-bg-card border border-border rounded-card p-5 card-hover">
        <p class="font-mono text-[10px] uppercase tracking-wider text-accent mb-3">{cat.name}</p>
        <ul class="space-y-0">
          {cat.items.map(item => (
            <li class="text-sm text-text-muted py-1 border-b border-white/[0.03] last:border-0">{item}</li>
          ))}
        </ul>
      </div>
    ))}
  </div>
</section>
